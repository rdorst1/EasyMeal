@model EasyMealOrder.Models.ViewModels.OrderViewModel.CreateModel;
@using EasyMeal.Domain;

@{
    ViewData["Title"] = "Create";
}

    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>

<h1>Create</h1>

<h4>Order Meal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Order/Create" method="post">
            <input name="MealId" class="form-control" type="hidden" readonly="readonly" value="@ViewBag.Meal.MealId" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Appetizer" name="Appetizer" /> @Html.DisplayNameFor(model => model.Appetizer)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Dessert" name="Dessert" /> @Html.DisplayNameFor(model => model.Dessert)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderSize" class="control-label">Meal Size</label>
                <select asp-for="OrderSize" asp-items="Html.GetEnumSelectList<Size>()" name="OrderSize"></select>
                <span asp-validation-for="OrderSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input name="Price" class="form-control" type="text" readonly="readonly" value="@ViewBag.Meal.Price" />
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label">Day</label>
                <input name="Day" class="form-control" type="text" readonly="readonly" value="@ViewBag.Day" />
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input name="Date" class="form-control" type="text" readonly="readonly" value="@ViewBag.Meal.Date" />
            </div>
            <div class="form-group">
                <input type="submit" value="Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
